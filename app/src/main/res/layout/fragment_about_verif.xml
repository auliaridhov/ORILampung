<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".AboutLoginFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/logo"/>

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Akun Anda"
            android:textColor="#FFFF"
            android:textSize="32dp"
            android:layout_marginTop="58dp"
            android:fontFamily="@font/asap"
            android:layout_centerHorizontal="true"
            />

        <android.support.v7.widget.CardView
            android:id="@+id/card1"
            android:layout_below="@id/nama"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:backgroundTint="#ffffff">

            <ScrollView
                android:fillViewport="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/textIdentitas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="24dp"
                        android:textSize="16dp"
                        android:text="Nomor Identitas"/>

                    <TextView
                        android:layout_below="@id/textIdentitas"
                        android:id="@+id/noIdentitas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xxxxxxxxxxxxxx"
                        android:fontFamily="@font/asap"
                        android:textSize="14dp"
                        android:layout_centerHorizontal="true"/>


                    <Button
                        android:id="@+id/logout"
                        android:layout_below="@id/imageDone"
                        android:layout_width="160dp"
                        android:layout_marginTop="60dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="keluar"
                        android:textColor="#FFF"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/asap"
                        android:background="@drawable/round_border_blue"/>


                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/imageDone"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_below="@id/noIdentitas"
                        android:src="@drawable/ic_cloud_done_black_24dp"
                        />


                    <TextView
                        android:padding="8dp"
                        android:gravity="center"
                        android:id="@+id/verif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Akun anda sudah terverifikasi"
                        android:textSize="14dp"
                        android:fontFamily="@font/asap"
                        android:layout_below="@id/imageDone"
                        android:layout_centerHorizontal="true"
                        android:textColor="#4CAF50"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textSize="8dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="42dp"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/asap"
                        android:text="Â© Ombudsman Perwakilan Lampung - 2019"/>

                </RelativeLayout>

            </ScrollView>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</FrameLayout>