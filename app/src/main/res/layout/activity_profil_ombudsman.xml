<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilOmbudsman">

    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_below="@id/text1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#ffffff">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/logo2"
                    android:layout_centerHorizontal="true"
                    android:layout_width="260dp"
                    android:layout_height="120dp"
                    android:src="@drawable/logoforlogin"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d4d2d2"
                    android:layout_below="@id/logo2"
                    android:layout_marginTop="12dp"
                    android:layout_centerHorizontal="true"
                    />

                <LinearLayout
                    android:layout_below="@id/logo2"
                    android:id="@+id/layout1"
                    android:layout_marginTop="12dp"
                    android:layout_width="400dp"
                    android:layout_height="60dp"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_chevron_right_black_24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="40dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_marginLeft="40dp"
                        android:text="Sekilas Ombudsman"
                        android:textSize="16dp"
                        app:fontFamily="@font/asap" />


                </LinearLayout>

                <View

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d4d2d2"
                    android:layout_below="@id/layout1"
                    android:layout_centerHorizontal="true"
                    />

                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_below="@id/layout1"
                    android:layout_width="400dp"
                    android:layout_height="60dp"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_chevron_right_black_24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="40dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:text="Profil Pimpinan"
                        android:textStyle="bold"

                        android:textSize="16dp"
                        app:fontFamily="@font/asap" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d4d2d2"
                    android:layout_below="@id/layout2"
                    android:layout_centerHorizontal="true"
                    />

                <LinearLayout
                    android:id="@+id/layout3"
                    android:layout_below="@id/layout2"
                    android:layout_width="400dp"
                    android:layout_height="60dp"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_chevron_right_black_24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="40dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:text="Visi dan Misi"
                        android:textSize="16dp"
                        android:textStyle="bold"

                        app:fontFamily="@font/asap" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d4d2d2"
                    android:layout_below="@id/layout3"
                    android:layout_centerHorizontal="true"
                    />

                <LinearLayout
                    android:id="@+id/layout4"
                    android:layout_below="@id/layout3"
                    android:layout_width="400dp"
                    android:layout_height="60dp"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_chevron_right_black_24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="40dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:text="Tugas dan Fungsi"
                        android:textStyle="bold"

                        android:textSize="16dp"
                        app:fontFamily="@font/asap" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d4d2d2"
                    android:layout_below="@id/layout4"
                    android:layout_centerHorizontal="true"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d4d2d2"
                    android:layout_below="@id/layout4"
                    android:layout_centerHorizontal="true"
                    />

                <LinearLayout
                    android:id="@+id/layout6"
                    android:layout_below="@id/layout4"
                    android:layout_width="400dp"
                    android:layout_height="60dp"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_chevron_right_black_24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="40dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:text="Maklumat Pelayanan"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        app:fontFamily="@font/asap" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d4d2d2"
                    android:layout_below="@id/layout6"
                    android:layout_centerHorizontal="true"
                    />

                <LinearLayout
                    android:id="@+id/layout7"
                    android:layout_below="@id/layout6"
                    android:layout_width="400dp"
                    android:layout_height="60dp"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_chevron_right_black_24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="40dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:text="Struktur Organisasi"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        app:fontFamily="@font/asap" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d4d2d2"
                    android:layout_below="@id/layout7"
                    android:layout_centerHorizontal="true"
                    />

                <LinearLayout
                    android:id="@+id/layout8"
                    android:layout_below="@id/layout7"
                    android:layout_width="400dp"
                    android:layout_height="60dp"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_chevron_right_black_24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="40dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:text="FAQ tantang Ombudsman"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        app:fontFamily="@font/asap" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d4d2d2"
                    android:layout_below="@id/layout8"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

</RelativeLayout>