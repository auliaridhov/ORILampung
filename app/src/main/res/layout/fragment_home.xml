<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_collapseMode="pin">

        <ImageView
            android:layout_marginRight="20dp"
            android:padding="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/banner"/>

    </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_below="@id/toolBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/backvf"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    app:layout_collapseMode="parallax">


                    <HorizontalScrollView
                        android:layout_below="@id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_margin="8dp"
                                android:id="@+id/img1"
                                android:src="@drawable/fliper1"
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                />
                            <ImageView
                                android:layout_margin="8dp"
                                android:id="@+id/img2"
                                android:src="@drawable/fliper2"
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                />
                            <ImageView
                                android:layout_margin="8dp"
                                android:id="@+id/img3"
                                android:src="@drawable/fliper3"
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                />
                            <ImageView
                                android:layout_margin="8dp"
                                android:id="@+id/img4"
                                android:src="@drawable/fliper4"
                                android:layout_width="110dp"
                                android:layout_height="wrap_content"
                                />

                        </LinearLayout>

                    </HorizontalScrollView>




                </RelativeLayout>

                 <RelativeLayout

                android:layout_below="@id/backvf"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv"
                    android:textColor="#000000"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilih Layanan"
                    android:textSize="14dp"
                    android:fontFamily="@font/amiko"
                    android:layout_marginLeft="24dp"
                    />

                <android.support.v7.widget.CardView
                    android:layout_below="@id/tv"
                    android:layout_marginTop="8dp"
                    android:id="@+id/card0"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="22dp"
                    android:layout_height="68dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="22dp"
                    android:backgroundTint="#ffff"
                    app:cardCornerRadius="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image0"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/icon_panduan"
                        android:layout_width="48dp"
                        android:padding="8dp"
                        android:layout_height="wrap_content"
                        />

                        <TextView
                            android:layout_marginTop="16dp"
                            android:id="@+id/tv0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Panduan Aplikasi"
                            android:textColor="#000"
                            android:textSize="12dp"
                            android:layout_toRightOf="@id/image0"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="italic"
                            android:layout_below="@id/tv0"
                            android:layout_toRightOf="@id/image0"
                            android:textSize="10dp"
                            android:text="Cara smart pakai aplikasi Ombudsman"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="6dp"
                            android:src="@drawable/ic_chevron_right_black_24dp"/>


                    </RelativeLayout>


                </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_marginTop="8dp"
                        android:layout_below="@id/card0"
                        android:id="@+id/card1"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="22dp"
                        android:layout_height="68dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="22dp"
                        android:backgroundTint="#ffff"
                        app:cardCornerRadius="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/image1"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/icon_call"
                            android:layout_width="48dp"
                            android:padding="8dp"
                            android:layout_height="wrap_content"
                            />

                        <TextView
                            android:layout_marginTop="16dp"
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hubungi Ombudsman"
                            android:textColor="#000"
                            android:textSize="12dp"
                            android:layout_toRightOf="@id/image1"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="italic"
                            android:layout_below="@id/tv1"
                            android:layout_toRightOf="@id/image1"
                            android:textSize="10dp"
                            android:text="Awasi, Tegur dan Laporkan"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="6dp"
                            android:src="@drawable/ic_chevron_right_black_24dp"/>

                    </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_below="@id/card1"
                        android:id="@+id/card2"
                        android:layout_width="match_parent"
                        android:layout_marginRight="22dp"
                        android:layout_marginLeft="22dp"
                        android:layout_height="68dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#ffff"
                        app:cardCornerRadius="8dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/image2"
                                android:layout_alignParentLeft="true"
                                android:src="@drawable/icon_tracking"
                                android:layout_width="48dp"
                                android:padding="8dp"
                                android:layout_height="wrap_content"
                                />

                            <TextView
                                android:layout_marginTop="16dp"
                                android:id="@+id/tv2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lacak Aduan"
                                android:textColor="#000"
                                android:textSize="12dp"
                                android:layout_toRightOf="@id/image2"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="italic"
                                android:layout_below="@id/tv2"
                                android:layout_toRightOf="@id/image2"
                                android:textSize="10dp"
                                android:text="Cek status aduan anda"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="6dp"
                                android:src="@drawable/ic_chevron_right_black_24dp"/>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_below="@id/card2"
                        android:layout_marginTop="12dp"
                        android:id="@+id/card3"
                        android:layout_width="match_parent"
                        android:layout_marginRight="22dp"
                        android:layout_marginLeft="22dp"
                        android:layout_height="68dp"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="#ffff"
                        app:cardCornerRadius="8dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/image3"
                                android:layout_alignParentLeft="true"
                                android:src="@drawable/icon_media"
                                android:layout_width="48dp"
                                android:padding="8dp"
                                android:layout_height="wrap_content"
                                />

                            <TextView
                                android:layout_marginTop="16dp"
                                android:id="@+id/tv3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Media"
                                android:textColor="#000"
                                android:textSize="12dp"
                                android:layout_toRightOf="@id/image3"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="italic"
                                android:layout_below="@id/tv3"
                                android:layout_toRightOf="@id/image3"
                                android:textSize="10dp"
                                android:text="Info menarik tentang Ombudsman!"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="6dp"
                                android:src="@drawable/ic_chevron_right_black_24dp"/>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_below="@id/card3"
                        android:id="@+id/card4"
                        android:layout_width="match_parent"
                        android:layout_marginRight="22dp"
                        android:layout_marginLeft="22dp"
                        android:layout_height="68dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#ffff"
                        android:layout_marginBottom="18dp"
                        app:cardCornerRadius="8dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/image4"
                                android:layout_alignParentLeft="true"
                                android:src="@drawable/icon_profil_ombudsman"
                                android:layout_width="48dp"
                                android:padding="8dp"
                                android:layout_height="wrap_content"
                                />

                            <TextView
                                android:layout_marginTop="16dp"
                                android:id="@+id/tv4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Profil Ombudsman"
                                android:textColor="#000"
                                android:textSize="12dp"
                                android:layout_toRightOf="@id/image4"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="italic"
                                android:layout_below="@id/tv4"
                                android:layout_toRightOf="@id/image4"
                                android:textSize="10dp"
                                android:text="Profil Ombudsman Lampung"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="6dp"
                                android:src="@drawable/ic_chevron_right_black_24dp"/>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                <TextView
                    android:layout_below="@id/card4"
                    android:id="@+id/artikel"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/amiko"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Berita Ombudsman"
                    android:textSize="14dp"
                    android:layout_marginLeft="22dp"
                    android:textColor="#000000"
                    />

                <RelativeLayout
                    android:id="@+id/cardLayout2"
                    android:layout_below="@id/artikel"
                    android:layout_marginRight="22dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

                    <ImageView
                        android:id="@+id/linkArtikel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/artikel"/>

                </RelativeLayout>

                <TextView
                    android:layout_below="@id/cardLayout2"
                    android:id="@+id/kantorOmbudsman"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kantor Ombudsman"
                    android:textSize="14dp"
                    android:fontFamily="@font/amiko"
                    android:layout_marginLeft="22dp"
                    android:textColor="#000000"
                    />

                <android.support.v7.widget.CardView
                    android:id="@+id/cardLayout3"
                    android:layout_below="@id/kantorOmbudsman"
                    android:layout_marginRight="22dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="22dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <RelativeLayout
                    android:padding="8dp"
                    android:id="@+id/layoutAlamat"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/alamat"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_location_on_black_24dp"/>

                    <TextView
                        android:layout_below="@id/alamat"
                        android:id="@+id/Texalamat"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/asap"
                        android:textSize="12dp"
                        android:textColor="#000"
                        android:layout_centerHorizontal="true"
                        android:text="Jl. Way Semangka No. 16A Pahoman Bandar Lampung"/>

                    <TextView
                        android:layout_below="@id/Texalamat"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/asap"
                        android:textSize="10dp"
                        android:textColor="#000"
                        android:layout_centerHorizontal="true"
                        android:text="Telepon : (0721) 251373, Fax : (0721) 251373"/>

                </RelativeLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>
</FrameLayout>